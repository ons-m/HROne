<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox styleClass="app" stylesheets="@../CSS/FrmGestionOutil.fx.css" fx:controller="com.recruitx.hrone.FrmGestionOutilController" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1">
  <VBox styleClass="sidebar">
    <HBox styleClass="brand">
      <Label text="HR" styleClass="brand-logo" />
      <VBox>
        <Label text="HR One" styleClass="brand-name" />
        <Label text="Espace RH" styleClass="brand-sub" />
      </VBox>
    </HBox>

    <VBox styleClass="nav">
      <Label text="Recrutement" styleClass="nav-section" />
      <Button text="Gestion d'offre d'emploi" styleClass="nav-link" />
      <Button text="Candidatures" styleClass="nav-link" />
      <Button text="Entretiens" styleClass="nav-link" />
      <Button text="Statistiques" styleClass="nav-link" />

      <Label text="Gestion administrative" styleClass="nav-section" />
      <Button text="Gerer mes employees" styleClass="nav-link" />
      <Button text="Gerer les outils" styleClass="nav-link nav-link-active" />
    </VBox>
  </VBox>

  <ScrollPane fitToWidth="true" pannable="true" styleClass="main-scroll">
    <content>
      <VBox styleClass="main">
        <HBox styleClass="topbar">
          <VBox styleClass="user-info">
            <Label text="Agent RH" styleClass="user-name" />
            <Label text="Gestion administrative" styleClass="user-role" />
          </VBox>
          <Label text="AR" styleClass="avatar" />
        </HBox>

        <VBox styleClass="page-title">
          <Label text="Gerer les outils" styleClass="page-title-text" />
          <Label text="Ajoutez et suivez les outils disponibles avec leurs identifiants." styleClass="muted" />
        </VBox>

        <VBox styleClass="card">
          <HBox styleClass="card-header">
            <VBox>
              <Label text="Outils disponibles" styleClass="section-title" />
              <Label text="Gerez les outils et leurs identifiants." styleClass="muted" />
            </VBox>
            <Label text="8 outils" styleClass="pill muted-pill" />
          </HBox>

          <TableView fx:id="outilsTable" styleClass="data-table" prefHeight="280">
            <columns>
              <TableColumn fx:id="selectColumn" text="" prefWidth="40" />
              <TableColumn fx:id="nameColumn" text="Nom de l'outil" prefWidth="200" />
              <TableColumn fx:id="identifiantColumn" text="IDENTIFIANT_UNIVERSELLE" prefWidth="210" />
              <TableColumn fx:id="hashColumn" text="HASH_APP" prefWidth="160" />
              <TableColumn fx:id="actionsColumn" text="" prefWidth="80" />
            </columns>
          </TableView>
        </VBox>

        <VBox styleClass="card">
          <HBox styleClass="card-header">
            <VBox>
              <Label text="Ajouter un outil" styleClass="section-title" />
              <Label text="Enregistrez un nouvel outil et ses identifiants." styleClass="muted" />
            </VBox>
          </HBox>
          <VBox styleClass="form-vertical">
            <VBox styleClass="field">
              <Label text="Nom de l'outil" />
              <TextField promptText="Ex: Outil RH Suite" />
            </VBox>
            <VBox styleClass="field">
              <Label text="IDENTIFIANT_UNIVERSELLE" />
              <TextField promptText="Ex: RH-UNI-0001" />
            </VBox>
            <VBox styleClass="field">
              <Label text="HASH_APP" />
              <TextField promptText="Ex: a1b2c3d4e5" />
            </VBox>
            <HBox styleClass="form-actions">
              <Button text="Reinitialiser" styleClass="btn btn-ghost" />
              <Button text="Ajouter l'outil" styleClass="btn btn-primary" />
            </HBox>
          </VBox>
        </VBox>
      </VBox>
    </content>
  </ScrollPane>
</HBox>
