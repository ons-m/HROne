<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="396.0" prefWidth="497.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.recruitx.hrone.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" alignment="CENTER" prefHeight="18.0" prefWidth="506.0" text="Press the Button to Connect" />
    <Button onAction="#onHelloButtonClick" text="Hello!">
      <tooltip>
         <Tooltip text="Press the Button To Connect" textAlignment="CENTER" />
      </tooltip></Button>
</VBox>
