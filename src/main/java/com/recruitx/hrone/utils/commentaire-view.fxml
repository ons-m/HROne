<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.recruitx.hrone.controllers.CommentaireController">

    <top>
        <Label text="Gestion des Commentaires"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
        </Label>
    </top>

    <center>
        <TableView fx:id="tableView" BorderPane.margin="20">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colContenu" text="Contenu" prefWidth="300"/>
                <TableColumn fx:id="colPostId" text="Post ID" prefWidth="80"/>
            </columns>
        </TableView>
    </center>

    <right>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Formulaire Commentaire"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <Label text="ID Commentaire:"/>
            <TextField fx:id="txtId" editable="false"/>

            <Label text="ID Utilisateur:"/>
            <TextField fx:id="txtUserId"/>

            <Label text="ID Post:"/>
            <TextField fx:id="txtPostId"/>

            <CheckBox fx:id="chkReponse" text="Est une réponse"/>

            <Label text="ID Parent (optionnel):"/>
            <TextField fx:id="txtParentId"/>

            <HBox spacing="10">
                <Label text="Numéro Ordre:"/>
                <TextField fx:id="txtOrdre" prefWidth="80"/>
                <Button text="Auto" onAction="#handleAutoOrdre"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            </HBox>

            <Label text="Contenu:"/>
            <TextArea fx:id="txtContenu" prefRowCount="4"/>

            <HBox spacing="10">
                <Button text="Ajouter" onAction="#handleAjouter"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="Modifier" onAction="#handleModifier"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                <Button text="Supprimer" onAction="#handleSupprimer"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>

            <Button text="Effacer" onAction="#handleEffacer"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        </VBox>
    </right>

    <bottom>
        <HBox spacing="10" style="-fx-padding: 20;">
            <Label text="Recherche:"/>
            <TextField fx:id="txtSearch" prefWidth="300"/>
            <Button text="Rechercher" onAction="#handleRechercher"/>
            <Button text="Afficher tous" onAction="#loadAll"/>
        </HBox>
    </bottom>

</BorderPane>